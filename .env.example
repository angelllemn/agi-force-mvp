# === AGI FORCE MVP - CONFIGURACIÓN PRINCIPAL ===

# === APIs EXTERNAS ===
OPENAI_API_KEY=sk-your-openai-api-key-here

# === INTEGRACIÓN SLACK ===
SLACK_APP_TOKEN=xapp-your-app-level-token-here
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# === POSTMAN MCP ===
POSTMAN_API_KEY=your-postman-api-key-here

# === CONFIGURACIÓN MASTRA ===
MASTRA_BASE_URL=http://localhost:4111
MASTRA_AGENT_ID=pulseDeskAgent

# === CONFIGURACIÓN DE BASE DE DATOS ===
# Driver principal para persistencia: memory | postgres | sqlite
PERSISTENCE_DRIVER=postgres

DB_HOST=localhost
DB_PORT=5432
DB_NAME=agi_force_mvp
DB_USER=agi_user
DB_PASSWORD=agi_pass
DB_SSL=false

# DSN para Prisma (PostgreSQL por defecto)
# postgresql://agi_user:agi_pass@localhost:5432/agi_force_mvp?sslmode=disable
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable

# Opción SQLite (modo offline)
# PERSISTENCE_DRIVER=sqlite
# DATABASE_URL=file:./data/context.db

# URL dedicada para pruebas automatizadas (opcional)
# TEST_DATABASE_URL=postgresql://agi_test:agi_test@localhost:5433/agi_force_mvp_test

PRISMA_LOG_LEVEL=error

# === CONFIGURACIÓN DE LA APLICACIÓN ===
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug