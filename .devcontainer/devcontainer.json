{
  "name": "agi-force-mvp",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspaces/agi-force-mvp",
  "runServices": [
    "postgres",
    "workspace"
  ],
  "shutdownAction": "none",
  "remoteUser": "node",
  "initializeCommand": "bash -lc \"[ -f .devcontainer/.env ] || cp .devcontainer/.env.example .devcontainer/.env\"",
  "forwardPorts": [
    3000,
    5432,
    9229,
    8080
  ],
  "portsAttributes": {
    "3000": {
      "label": "Web App"
    },
    "5432": {
      "label": "PostgreSQL"
    },
    "9229": {
      "label": "Node Inspector"
    },
    "8080": {
      "label": "pgAdmin/Custom"
    }
  },
  "postCreateCommand": "npm install",
  "postAttachCommand": "bash -lc \"npm run dev\"",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "installDocker": true,
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-containers",
        "ms-ossdata.vscode-pgsql",
        "openai.chatgpt",
        "postman.postman-for-vscode",
        "upstash.context7-mcp",
        "esbenp.prettier-vscode"
      ]
    }
  }
}