{
	"servers": {
		"mastra": {
			"command": "npx",
			"args": [
				"-y",
				"@mastra/mcp-docs-server"
			],
			"type": "stdio"
		},
		"postman-api-mcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@postman/postman-mcp-server",
				"--full",
				"--region",
				"us"
			],
			"env": {
				"POSTMAN_API_KEY": "${input:postman-api-key}"
			}
		}
	},
	"inputs": [
		{
			"id": "postman-api-key",
			"type": "promptString",
			"description": "Enter your Postman API key"
		}
	]
}